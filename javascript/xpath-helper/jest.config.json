{
    "extensionsToTreatAsEsm": [
        ".ts"
    ],
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
        "^.+\\.m?[tj]sx?$": [
            "ts-jest",
            {
                "useESM": true
            }
        ]
    },
    "coveragePathIgnorePatterns": [
        "<rootDir>/test",
        "/node_modules/"
    ]
}